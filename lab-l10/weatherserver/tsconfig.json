{
    "compilerOptions": {
      "target": "ESNext",
      "allowJs": false,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "module": "commonjs",
      "moduleResolution": "Node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "outDir": "./dist",
      "rootDir": "./src",
    },
    "include": ["src"],
    "exclude": ["node_modules/**/*"]
  }